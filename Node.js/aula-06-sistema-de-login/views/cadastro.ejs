<%- include ('partials/navbar.ejs') %>
<%- include ('partials/header.ejs') %>

<div class="container">
    <div class="card mt-4 ">
        <div class="card-header">
            <h2>Cadastro de Usuário</h2>
        </div>
        <div class="card-body">
            <form action="/createUser" method="post">
                <label>E-mail:</label>
                <input type="email" name="email" id="email" class="form-control" placeholder="email@email.com.br" required><br>
                <label>Senha</label>
                <input type="password" class="form-control" name="password" placeholder="Insira uma Senha (min 8 caracteres)" required><br>
                <input type="submit" class="btn btn-success btn-block" value="Cadastrar">
            </form>
            <hr>
            <h6>Já possui conta? <a href="/login">Faça Login</a></h6>
        </div>
    </div>
</div>

