<%- include('partials/navbar.ejs') %>
<%- include ('partials/header.ejs') %>
    <h1>Conheça os nossos produtos</h1>
    <hr>
    <!-- Tags EJS chamando a variável que veio do index.js -->
    <!-- Sempre que for concatenar uma variável, coloca o = depois do < % -->
    <%= produto %> 

    <!-- Condição para verificar se o produto não foi passado -->
    <% if (!produto) { %>
        <p><%= listaProdutos %></p>
    <% } %>

    <!-- ForEach para percorrer a lista de produtos -->
    <% if(!produto) { %>
        <% listaProdutos.forEach((produto) => { %>
            <p><a href="/produtos/<%= produto %>"><%= produto %></a></p>
        <% }); %>
    <% } %>
<%- include ('partials/footer.ejs') %>